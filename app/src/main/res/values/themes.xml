<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.5MB" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#121212</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_512_transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.5MB</item>
    </style>
</resources>
